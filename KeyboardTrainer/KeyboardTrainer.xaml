            </Border>
            <Border Background="#FF92FF6C">
                <Label Content="'" Tag="OemQuotes"/>
            </Border>
            <Border Background="#FFA7A7A7">
                <Label Content="Enter" Width="102" Tag="Return"/>
            </Border>
            <Border Background="#FFA7A7A7">
                <Label Content="Shift" Width="134" Tag="LeftShift"/>
            </Border>
